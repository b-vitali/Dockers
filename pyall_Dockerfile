# Use the official Ubuntu image
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install required packages
RUN apt-get update && apt-get install -y \
    screen \
    python3-pip \
    python3-dev \
    python3-tk \
    x11-apps \
    git \
    libsqlite3-dev \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install pip packages
RUN pip3 install --no-cache-dir \
    openpyxl \
    streamlit \
    matplotlib 

RUN pip3 install --no-cache-dir \
    torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu 

RUN pip3 install --no-cache-dir \
    gpytorch \
    numpy \
    scipy \
    pandas \
    scikit-learn \
    tqdm \
    cython \
    h5py \
    lmfit \
    ipympl \
    ipython 

RUN pip3 install --no-cache-dir \
    notebook \
    jupyterlab 

RUN pip3 install --no-cache-dir \
    mkdocs \
    mkdocs-material \
    mkdocs-macros-plugin \
    pymdown-extensions \
    mkdocstrings[python]

# Set the display environment variable
ENV DISPLAY=:0

# Add the user and group IDs dynamically
ARG USER_ID=1000
ARG GROUP_ID=1000

RUN groupadd --gid ${GROUP_ID} usergroup \
    && useradd --uid ${USER_ID} --gid ${GROUP_ID} -m user \
    && echo "user ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to the new user
USER user

# Add alias to run Jupyter easily
RUN echo "alias run_jupyter='jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root --NotebookApp.token=\"\" --NotebookApp.password=\"\"'" >> /home/user/.bashrc
RUN echo "alias run_mkdocs_serve='mkdocs serve -a 0.0.0.0:8000'" >> /home/user/.bashrc
RUN echo "alias run_mkdocs_build='mkdocs build'" >> /home/user/.bashrc

# Set project name in shell
RUN echo 'export CUSTOM_NAME="pyall"' >> /home/user/.bashrc

# Set terminal title and prompt
RUN echo 'echo -ne "\033]0;PyAll\007"' >> /home/user/.bashrc
RUN echo 'if [[ $STY ]]; then export PS1="\[\033[01;32m\]${CUSTOM_NAME}_$STY\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ "; else export PS1="\[\033[01;32m\]${CUSTOM_NAME}\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ "; fi' >> /home/user/.bashrc

# Create .screenrc file and set bash as the shell for screen
RUN echo "shell /bin/bash" >> /home/user/.screenrc
RUN echo "source /home/user/.bashrc" >> /home/user/.screenrc

# Expose Streamlit, Jupyter and mkdocs ports
EXPOSE 8501
EXPOSE 8888
EXPOSE 8000

# Set working directory
WORKDIR /mnt/pyall

# Start bash by default
CMD ["/bin/bash"]
